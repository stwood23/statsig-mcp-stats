# Required: Your Statsig Console API key
# Get this from Project Settings > API Keys at https://console.statsig.com
STATSIG_CONSOLE_API_KEY=console-your-key-here

# =============================================================================
# EXPERIMENT RESULTS EXTENSIONS - Optional Configuration
# =============================================================================

# Cache Configuration
# Enable/disable caching for experiment results (improves performance)
STATSIG_RESULTS_CACHE_ENABLED=true

# Cache time-to-live in seconds (default: 300 = 5 minutes)
STATSIG_RESULTS_CACHE_TTL=300

# Maximum number of cached results to store in memory
STATSIG_RESULTS_CACHE_MAX_SIZE=1000

# API Configuration
# Timeout for Console API requests in milliseconds
STATSIG_API_TIMEOUT_MS=5000

# Number of retry attempts for failed API requests
STATSIG_RETRY_ATTEMPTS=3

# Delay between retry attempts in seconds
STATSIG_RETRY_DELAY_SECONDS=1

# Rate Limiting
# Maximum requests per minute to Console API
STATSIG_RATE_LIMIT_PER_MINUTE=100

# Debug and Logging
# Enable detailed logging for results functionality
STATSIG_DEBUG_RESULTS=false

# Log level for results operations (DEBUG, INFO, WARNING, ERROR)
STATSIG_RESULTS_LOG_LEVEL=INFO

# Export Configuration
# Default format for pulse report exports (json, csv, summary)
STATSIG_DEFAULT_EXPORT_FORMAT=json

# Maximum number of data points in exported reports
STATSIG_EXPORT_MAX_DATA_POINTS=10000

# Include visualization data in exports by default
STATSIG_EXPORT_INCLUDE_CHARTS=false

# Performance Tuning
# Enable concurrent requests for batch operations
STATSIG_ENABLE_CONCURRENT_REQUESTS=true

# Maximum concurrent requests (be mindful of rate limits)
STATSIG_MAX_CONCURRENT_REQUESTS=5

# Environment Specific Settings
# Current environment (development, staging, production)
STATSIG_ENVIRONMENT=development

# Enable additional validation in development mode
STATSIG_DEV_MODE_VALIDATION=true 