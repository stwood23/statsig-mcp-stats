{
    "name": "Statsig MCP Server",
    "image": "mcr.microsoft.com/devcontainers/python:3.11",
    "features": {},
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter"
            ]
        }
    },
    "postCreateCommand": "pip install -e .",
    "forwardPorts": [8000],
    "remoteEnv": {
        "STATSIG_CONSOLE_API_KEY": "${containerEnv:STATSIG_CONSOLE_API_KEY}"
    },
    "secrets": {
        "STATSIG_CONSOLE_API_KEY": {
            "description": "Statsig Console API key for experiment results",
            "documentationUrl": "https://console.statsig.com"
        }
    }
}
